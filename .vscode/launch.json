  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API /server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "server-api"],
      "timeout": 40000,
      "cwd": "${workspaceFolder}/apps/hl7-server",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
    },
    {
      "name": "Debug API /client",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "server-cli"],
      "timeout": 40000,
      "cwd": "${workspaceFolder}/apps/hl7-client",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true

    }
  ]
}
